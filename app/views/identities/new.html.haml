%h1 Sign Up

= form_tag '/auth/identity/register' do
  -#This is gonna be flashed or js'd.
  - if @identity && @identity.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in @identity.errors.full_messages
          %li
            = message
  %p
    = label_tag :name
    %br
    = text_field_tag :name 
  %p
    = label_tag :email
    %br
    = text_field_tag :email 
  %p
    = label_tag :password
    %br
    = password_field_tag :password
  %p
    = label_tag :password_confirmation
    %br 
    = password_field_tag :password_confirmation 
  
  %p.button
    = submit_tag "Register"
