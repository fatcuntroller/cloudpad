= render 'layouts/logo'
.pure-u-1-3
.pure-u-1-3.form-center-input
  = form_tag '/auth/identity/register', class: 'pure-form pure-form-stacked' do
    - if @identity && @identity.errors.any?
      .error_messages
        %h2 Form is invalid
        %ul
          - for message in @identity.errors.full_messages
            %li
              = message
    %fieldset
      %legend
        Sign up for an account.
      = text_field_tag :name, nil, placeholder: "Name"
      = text_field_tag :email, nil, placeholder: "Email"
      = password_field_tag :password, nil, placeholder: "Password"
      = password_field_tag :password_confirmation, nil, placeholder: "Password again"
      = submit_tag "Register", class: 'pure-button pure-button-primary'
.pure-u-1-3